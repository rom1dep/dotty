#!/usr/bin/env bash
#
# Usage: get-scala-commit-date [dir]
# Figures out current commit date of a git clone.
# If no dir is given, current working dir is used.
#
# Example build version string:
#   20120312
#

[[ $# -eq 0 ]] || cd "$1"

if [ -d .git ] || git rev-parse --is-inside-git-dir > /dev/null 2>&1 ; then
  lastcommitdate=$(git log --format="%ci" HEAD | head -n 1 | cut -d ' ' -f 1)
elif [ -d ".hg" ] || hg root > /dev/null ; then
  lastcommitdate=$(HGPLAIN= hg log -r . -T "{date|shortdate}")
fi

# 20120324
echo "${lastcommitdate//-/}"
